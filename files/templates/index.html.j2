{% extends "base.html.j2" %}
{% block content %}
    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
      <div class="container">
        <div class="row"  style="margin-bottom: -50px; margin-top: -50px">
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-people m-auto text-primary"></i>
              </div>
              <h3>Services</h3>
              <p class="lead mb-0">
                    Cloud solutions<br>
                    Linux computing<br>
                    Installation / Maintenance<br>
                    Networking (Access control, VPN)<br>
                    Encryption
              </p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-basket m-auto text-primary"></i>
              </div>
              <h3>Products</h3>
              <p class="lead mb-0">
                    Websites<br>
                    Scientific software solutions<br>
                    Information management systems<br>
                    File management (personal cloud)
              </p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="features-icons-item mx-auto mb-0 mb-lg-3">
              <div class="features-icons-icon d-flex">
                <i class="icon-screen-desktop m-auto text-primary"></i>
              </div>
              <h3>Examples</h3>
              <p class="lead mb-0">
                    File/image management<br>
                    Document templates<br>
                    Digital signing<br>
                    Blockchain<br>
                    Google charts<br>
                    QR-codes
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="container" style="margin-top: 20px">
    <div class="row justify-content-md-center">
    <div class="col-md-auto">

    <center><h3><i class="icon-note m-auto text-primary"></i> Contact</h3></center>
    <form action="/" method="post">
    {% csrf_token %}
    <table border=0>
    {{ form.as_table() }}
    <tr><td></td><td><input class="btn btn-success" type="submit" value="Send"></td></tr>
    </table>

    </form>
    </div>
    </div>
    </div>
{% endblock %}
